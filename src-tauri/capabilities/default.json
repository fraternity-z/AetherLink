{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "enables the default permissions",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    {
      "identifier": "http:default",
      "allow": [
        { "url": "https://**" },
        { "url": "http://**" }
      ]
    },
    "dialog:default",
    "dialog:allow-open",
    "dialog:allow-save",
    {
      "identifier": "fs:default",
      "allow": [
        { "path": "**" }
      ]
    },
    "fs:allow-read",
    "fs:allow-write",
    "fs:allow-rename",
    "fs:allow-remove",
    "fs:allow-copy-file",
    "fs:allow-mkdir",
    "fs:allow-stat",
    "fs:allow-exists",
    "fs:allow-read-dir",
    "fs:allow-read-file",
    "fs:allow-read-text-file",
    "fs:allow-write-file",
    "fs:allow-write-text-file",
    "shell:default",
    "shell:allow-open"
  ]
}
